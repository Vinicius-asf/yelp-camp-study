<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Create a new campground</h1>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="Campground's Name">Camp Name</label>
                    <input type="text" name="camp[name]" class="form-control" id="campName" aria-describedby="textlHelp" placeholder="Enter camp's name">
                    <small id="textlHelp" class="form-text text-muted">Important to be looked for!</small>
                </div>
                <div class="form-group">
                    <label for="Image URL">Image link</label>
                    <input type="text" name="camp[imageURL]" class="form-control" id="imageURL" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label for="Description">Description</label>
                    <input type="text" name="camp[desc]" class="form-control" id="desc" placeholder="Description">
                </div>
                <div class="form-group">
                    <label for="Description">Price per night</label>
                    <input type="number" name="camp[price]" class="form-control" id="price" min="0.01" step="0.01">
                </div>
                <button class="btn btn-block btn-primary">Submit</button>
            </form>
            <a href="/campgrounds">Back</a>
        </div>
    </div>
</div>
    
<%- include("../partials/footer") %> 