<%- include("partials/header") %> 

<div class="container">
    
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our handpicked campgrounds from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="campgrounds/new">Add New Camp</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular sites</h3>
        </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;" >
        <% campsData.forEach(camp => { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img style="width: 100%;" src="<%= camp.data().imageURL %>" alt="<%= camp.data().name %> photo">
                    <div class="caption">
                        <h4>
                            <%= camp.data().name %>
                        </h4>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campgrounds/<%= camp.id %> ">More info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<%- include("partials/footer") %> 