<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Edit comment to <%= camp.data().name %></h1>
            <form action="/campgrounds/<%= camp.id %>/comments/<%= comment.id %>/edit?_method=PUT  " method="POST">
                <div class="form-group">
                    <label for="Description">Comment's text</label>
                    <textarea required class="form-control" name="comment[text]" id="" cols="30" rows="10"><%= comment.data().text %> </textarea>
                </div>
                <button class="btn btn-block btn-primary">Submit</button>
            </form>
            <a href="/campgrounds/<%= camp.id %> ">Back</a>
        </div>
    </div>
</div>
    
<%- include("../partials/footer") %> 