<%- include("../partials/header") %> 

<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <h1 style="text-align: center;">Add new comment to <%= camp.data().name %></h1>
            <form action="/campgrounds/<%= camp.id %>/comments " method="POST">
                <div class="form-group">
                    <label for="Campground's Name">Author's name</label>
                    <input type="text" name="comment[author]" class="form-control" id="campName" aria-describedby="textlHelp" placeholder="Author's name">
                    <!-- <small id="textlHelp" class="form-text text-muted">Important to be looked for!</small> -->
                </div>
                <!-- <div class="form-group">
                    <label for="Image URL">Image link</label>
                    <input type="text" name="imageURL" class="form-control" id="imageURL" placeholder="Image URL">
                </div> -->
                <div class="form-group">
                    <label for="Description">Comment's text</label>
                    <input type="text" name="comment[text]" class="form-control" id="description" placeholder="">
                </div>
                <button class="btn btn-block btn-primary">Submit</button>
            </form>
            <a href="/campgrounds/<%= camp.id %> ">Back</a>
        </div>
    </div>
</div>
    
<%- include("../partials/footer") %> 